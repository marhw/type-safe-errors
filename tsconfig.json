{
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "outDir": "./dist",

    "baseUrl": ".",
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "commonjs",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "lib": ["es2019"],
    "moduleResolution": "node",
    "types": ["node", "mocha", "chai", "sinon-chai"]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "./src/test/**/*"]
}
